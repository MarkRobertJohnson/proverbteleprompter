<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ProverbTeleprompter.EyelineTriangleControl"
	x:Name="UserControl"
	d:DesignWidth="42" d:DesignHeight="54.4">

	<Grid x:Name="LayoutRoot">
		<Polygon Stretch="Fill" Fill="#FFF2F205" Stroke="Transparent"
			
			VerticalAlignment="Top" 
			 >
			<Polygon.Points>
				<PointCollection>
					<Point X="0" Y="0" />
					<Point X="1" Y="0.5" />
					<Point X="0" Y="1" />
				</PointCollection>
			</Polygon.Points>

		</Polygon>
	</Grid>
</UserControl>