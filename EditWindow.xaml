<Window x:Class="ProverbTeleprompter.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:re="clr-namespace:Adastra.RichEditorLibrary;assembly=Adastra.RichEditorLibrary"
        Title="EditWindow" Height="338" Width="582">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <re:RichTextEditor Name="RichTextEditor" DocTitle="Edit Document"  />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Height="40" Width="123" FontSize="16" Content="Update" Name="UpdateButton" Margin="5" Style="{DynamicResource ToolButtonStyle}" Click="UpdateButton_Click" />
            <Button Height="40" Width="136" FontSize="16" Content="Update and Close" Name="CloseAndUpdateButton" Margin="5" Style="{DynamicResource ToolButtonStyle}" Click="CloseAndUpdateButton_Click" />
            <Button Height="40" Width="136" FontSize="16" Content="Cancel" Name="CancelButton" Margin="5" Style="{DynamicResource ToolButtonStyle}" Click="CancelButton_Click" />
        </StackPanel>
        
    </Grid>
</Window>
